<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitebird.parcel.AddParcelActivity.CreateParcelTakeImageAndData">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:text="Add Your parcel Image"
        android:id="@+id/tv_hint_of_create_parcel_take_image"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/image_of_item_selected"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint_of_create_parcel_take_image"
        android:src="@drawable/parcel_image_camera"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_of_item_selected"
        android:layout_marginTop="20dp"
        android:text="Select Which Type Of Parcel Delivering:"
        android:id="@+id/tv_hint_parcel_type_of_create_parcel_take_image"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_hint_parcel_type_of_create_parcel_take_image"
        android:inputType="text"
        android:id="@+id/get_type"
        android:layout_margin="10dp"
        android:padding="20dp" />

