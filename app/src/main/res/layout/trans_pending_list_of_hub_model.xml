<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="10dp"
        android:layout_margin="20dp">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trans_pending_model_view_sender_address"
                android:text="Sender Address :"
                android:textStyle="bold"
                android:layout_margin="10dp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:id="@+id/trans_pending_model_edit_sender_address"
                android:layout_margin="10dp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/trans_pending_model_view_address"
                android:text="Receiver Address :"
                android:textStyle="bold"
                android:layout_margin="10dp"
                tools:ignore="RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/address"
                android:id="@+id/trans_pending_model_edit_address"
                android:layout_margin="10dp"
                tools:ignore="RtlHardcoded" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trans_pending_model_view_order_no"
                    android:text="Order Number :"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Order Number"
                    android:id="@+id/trans_pending_model_edit_order_no"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/trans_pending_model_view_order_no"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/trans_pending_model_view_dispatch_time"
                    android:text="Order Status :"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    tools:ignore="RtlHardcoded" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Status"
                    android:id="@+id/trans_pending_model_edit_dispatch_time"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/trans_pending_model_view_dispatch_time"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
