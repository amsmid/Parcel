<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_pending_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="10dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        tools:context="com.whitebird.parcel.Owner.Profile.ProfileActivity.ClsProfileDisplay"
        android:orientation="vertical">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="49dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/textView2" />




        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textSize="40sp"
            android:textAlignment="center"
            android:id="@+id/view_profile_o_name"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_email_icon"
            android:src="@drawable/email_icon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_o_name"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:id="@+id/view_profile_o_email"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/view_profile_o_name"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_email_icon"
            tools:layout_editor_absoluteY="233dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_mob_no_icon"
            android:src="@drawable/mobile_number_icon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_email_icon"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/mob_number"
            android:id="@+id/view_profile_o_mobile_no"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_email_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_mob_no_icon"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_address_icon"
            android:src="@drawable/address_icon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_mob_no_icon"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/address"
            android:id="@+id/view_profile_o_address"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_mob_no_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_address_icon"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_pin_code_icon"
            android:src="@drawable/pincode_icon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_address_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/pincode"
            android:id="@+id/view_profile_o_pincode"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_address_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_pin_code_icon"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_state_icon"
            android:src="@drawable/india_state"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_pin_code_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/state"
            android:id="@+id/view_profile_o_state"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_pin_code_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_state_icon"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_profile_display_city_icon"
            android:src="@drawable/city_icon"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_state_icon"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/city"
            android:id="@+id/view_profile_o_city"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_display_state_icon"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile_display_city_icon"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp" />

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</ScrollView>